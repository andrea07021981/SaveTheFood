<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="homeViewModel"
            type="com.example.savethefood.home.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".home.HomeFragment"
        android:background="@color/colorAccent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/food_recycleview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutAnimation="@anim/layout_slide_from_right"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            bind:listdata="@{homeViewModel.foodList}"
            tools:listitem="@layout/food_item" />

        <ProgressBar
            android:id="@+id/loading_spinner"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            bind:goneIfNotNull="@{homeViewModel.foodList}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addfood_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            android:scaleType="center"
            app:backgroundTint="@color/colorSecondary"
            app:tint="@color/colorSecondaryText"
            android:clickable="true"
            bind:loadViewAnimation="@{homeViewModel.animationResourceButton}"
            app:fabSize="auto"
            android:onClick="@{() -> homeViewModel.navigateToOnlineSearch()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/ic_searchonline"
            android:focusable="true"
            app:pressedTranslationZ="12dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/barcode_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="31dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="@{() -> homeViewModel.navigateToBarcodeReader()}"
            android:scaleType="center"
            app:backgroundTint="@color/colorSecondary"
            app:fabSize="auto"
            app:layout_constraintBottom_toTopOf="@+id/addfood_fab"
            app:layout_constraintRight_toRightOf="parent"
            bind:loadViewAnimation="@{homeViewModel.animationResourceButton}"
            app:pressedTranslationZ="12dp"
            app:srcCompat="@drawable/ic_barcode"
            app:tint="@color/colorSecondaryText" />

        <ImageView
            android:id="@+id/status_imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/loading_animation"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/primaryColorAlpha"
            android:visibility="@{homeViewModel.status}" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
