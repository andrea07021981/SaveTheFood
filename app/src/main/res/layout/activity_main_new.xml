<!-- TODO issue with DrawerLayout must be measured with MeasureSpec.EXACTLY when Open a child-->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.drawerlayout.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/motionDrawerLayout"
        android:background="@color/colorPrimaryDark">

        <com.example.savethefood.util.DrawerContent
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutDescription="@xml/scene_drawer_content">

            <LinearLayout
                android:id="@+id/main_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <com.google.android.material.appbar.AppBarLayout
                    android:id="@+id/appbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/AppTheme.AppBarOverlay">

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        app:menu="@menu/overflow_menu"
                        app:popupTheme="@style/AppTheme.PopupOverlay" />

                </com.google.android.material.appbar.AppBarLayout>
                <fragment
                    android:id="@+id/nav_host_fragment"
                    android:name="androidx.navigation.fragment.NavHostFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:defaultNavHost="true"
                    app:navGraph="@navigation/main_graph" />
            </LinearLayout>

        </com.example.savethefood.util.DrawerContent>

        <com.example.savethefood.util.DrawerContent
            android:id="@+id/menu"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:layoutDescription="@xml/scene_menu"
            android:background="@color/colorPrimaryDark">

            <com.google.android.material.navigation.NavigationView
                android:id="@+id/nav_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:background="@color/colorPrimary"
                android:backgroundTint="@color/colorPrimary"
                app:itemTextColor="@color/colorAccentBright"
                app:itemIconTint="@color/colorAccentBright"
                app:headerLayout="@layout/nav_header"
                app:menu="@menu/menu_drawer" />
        </com.example.savethefood.util.DrawerContent>

    </androidx.drawerlayout.widget.DrawerLayout>
</layout>