<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="foodItem"
            type="com.example.savethefood.data.domain.FoodItem" />

        <variable
            name="foodCallback"
            type="com.example.savethefood.BaseAdapter.BaseClickListener" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp">

        <View
            android:id="@+id/clickableOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground"
            android:onClick="@{() -> foodCallback.onClick(foodItem)}" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            bind:imageLocalUrl="@{foodItem.img}"
            tools:src="@drawable/ic_apple_1" />

        <TextView
            android:id="@+id/title"
            android:layout_toEndOf="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@{foodItem.name}"
            tools:text="Apple"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center" />
    </RelativeLayout>
</layout>